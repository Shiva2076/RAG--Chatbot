{
  "name": "rag-chatbot-backend",
  "version": "1.0.0",
  "description": "RAG-powered chatbot backend for news websites",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "nodemon server.js",
    "dev": "nodemon server.js",
    "ingest": "node scripts/ingestNews.js",
    "test": "node --test tests/*.test.js",
    "docker:build": "docker build -t rag-chatbot-backend .",
    "docker:run": "docker run -p 5000:5000 rag-chatbot-backend",
    "deploy:render": "npm run ingest && npm start"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@qdrant/js-client-rest": "^1.15.1",
    "axios": "^1.12.1",
    "cheerio": "^1.0.0-rc.12",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "ioredis": "^5.7.0",
    "node-fetch": "^3.3.2",
    "qdrant-client": "^0.0.1",
    "redis": "^4.6.12",
    "rss-parser": "^3.13.0",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
